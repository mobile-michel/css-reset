---
layout: base
---
<header>
    {% include 'nav-primary' %}
    <h1>CSS Reset & Normalization Libraries</h1>
</header>
<main>
    {% if collections.secondary %}
    <aside>
        {% include 'nav-secondary' %}
    </aside>
    {% endif %}
    <section aria-labelledby="{{ title | slugify }}">
        <h2 id="{{ title | slugify }}">{{ title }}</h2>
        {% if description %}<p><strong>{{ description }}</strong></p>{% endif %}
        {% if author %}<p>Author: {{ author }}</p>{% endif %}
        {% if website %}<p>Website: <a href="{{ website }}" target="_blank">{{ website }}</a></p>{% endif %}
        {{ content }}
    </section>
</main>
<footer>
    {% if collections.footer %}{% include 'nav-footer' %}{% endif %}
    {% render 'copyright' %}
</footer>